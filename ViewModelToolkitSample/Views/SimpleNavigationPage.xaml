<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ViewModelToolkitSample.ViewModels"
             x:Class="ViewModelToolkitSample.Views.SimpleNavigationPage"
             x:DataType="vm:SimpleNavigationPageViewModel"
             Title="Simple Navigation Page">
    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30" WidthRequest="{OnIdiom Desktop=600, Tablet=600}">
            <Label Text="Simple Navigation Page" Style="{StaticResource TitleLabelStyle}" />

            <Border Style="{StaticResource ContentBorderStyle}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="You entered:" Style="{StaticResource HeaderLabelStyle}"/>
                    <Label Text="{Binding PassedText}" Style="{StaticResource FieldLabelStyle}"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
